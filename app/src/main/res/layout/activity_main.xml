<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wallpaper1"
    tools:context="com.techeducation.tech_reveal.MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="40dp"
        android:id="@+id/view2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5">
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:id="@+id/hangman"
            android:background="@drawable/hang1"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="40dp"
        android:id="@+id/view"

        android:layout_below="@+id/categories"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="52dp">
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:id="@+id/dictionary"
            android:background="@drawable/books"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="40dp"
        android:id="@+id/button"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/view"
        android:layout_toStartOf="@+id/view">
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:id="@+id/quiz"
            android:background="@drawable/puzzle1"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dictionary"
        android:id="@+id/textView5"
        android:layout_below="@+id/view"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quiz"
        android:id="@+id/textView6"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hangman"
        android:id="@+id/textView7"
        android:textColor="@android:color/white"
        android:layout_below="@+id/view2"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:textSize="27dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:id="@+id/categories"
        android:layout_marginTop="60dp" />

</RelativeLayout>
